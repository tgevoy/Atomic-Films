doctype html
html
  head
    //- shrink-to-fit=no is required for the Safari browser
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous")
    link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
    link(rel="stylesheet", href="/stylesheets/style.css")
    
  body
    //- Atomic Films Brand Section
    .container-fluid#afBrandMotto
      .atomicFilms-brand-text.float-left= title
      .row.py-3
        .col-12.col-md-10
    //- Navbar Nav Items
    nav.navbar.navbar-expand-md.navbar-dark
      .container  
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#mainNavbar")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#mainNavbar
          ul.nav.ml-auto
            li.nav-item
              a.nav-link(href="/") Movies
            li.nav-item
              a.nav-link(href="/movies") Synopsis
            li.nav-item
              a.nav-link(href="/movies/reserve") Reserve
            li.nav-item
              a.nav-link(href="/contact") Contact
    //- End Navbar
    br
    .container-fluid
      block content
      
      //- Footer Section
      footer.fixed-bottom.text-right
        .container
          p.af-footer-text 2017 &copy; 
            a(href="/") Atomic Films
            
