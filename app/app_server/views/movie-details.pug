extends layout

block content
  //- Movie Synopsis Section
  section.jumbotron.text-center
    .container
      h1.jumbotron-heading-text= pageHeader.heading
      br
      p.lead.text-white= pageHeader.tagline
      br
      p.text-white= pageHeader.message
    br
    br
    .container
      each movie in movies
        .row
          .card.w-100.bg-dark
            br
            .card-body.bg-dark.text-white
              h4.card-title-text.text-warning.text-center [#{movie.id}]
              h4.card-title-text.text-warning.text-center #{movie.title} (#{movie.year})
              img.img-responsive.mx-auto.d-block(style="width:40%" src= movie.poster)
              br
              p.card-text.text-justify-content-center= movie.summary
              br
              .container
                .btn-toolbar-justify-content-center(role="toolbar", aria-label="Show Times Toolbar")
                  p.text-justify-content-center.text-info= movie.day
                  .btn-group.mr-2(role="group", aria-label="First Show Time")
                    a.btn-link(href="/movies/reserve")
                      button.btn.btn-success(type="button")= movie.showTimes[0]
                  .btn-group.mr-2(role="group", aria-label="Second Show Time")
                    a.btn-link(href="/movies/reserve")
                      button.btn.btn-success(type="button")= movie.showTimes[1]
                  .btn-group.mr-2(role="group", aria-label="Third Show Time")
                    a.btn-link(href="/movies/reserve")
                      button.btn.btn-success(type="button")= movie.showTimes[2]
            br
          br
        br
        br
